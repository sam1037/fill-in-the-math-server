{
  "name": "fill-in-the-math-server",
  "version": "1.0.0",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx --watch --env-file .env src/index.ts",
    "start": "node dist/src/index.js",
    "start:optimized": "./scripts/start-optimized.sh",
    "start:gc": "node --expose-gc --max-old-space-size=2048 --env-file .env dist/src/index.js",
    "lint": "eslint",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "check-format": "prettier --ignore-path .gitignore --check **/*.{js,jsx,ts,tsx,json,css}",
    "check-all": "yarn check-format && yarn check-types && yarn lint && yarn test",
    "format": "prettier --write .",
    "prepare": "husky",
    "test": "jest",
    "test-in-band": "jest --runInBand",
    "db:setup": "npx tsx src/database/setup.ts",
    "db:seed": "npx tsx src/database/seed.ts",
    "monitor": "node --expose-gc --env-file .env dist/src/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@socket.io/admin-ui": "^0.5.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "husky": "^9.1.7",
    "memorystore": "^1.6.7",
    "pg": "^8.14.1",
    "socket.io": "^4.8.1",
    "socketio": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.22.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.11",
    "babel-jest": "^29.7.0",
    "eslint": "^9.22.0",
    "eslint-plugin-perfectionist": "^4.10.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  }
}
